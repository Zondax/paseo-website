{
	"name": "web-paseo-project",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"build": "next build",
		"check": "biome check --write --unsafe .",
		"deps:update": "pnpm exec npm-check-updates -u -t semver && pnpm install",
		"dev": "next dev --turbopack",
		"env:init": "cp .env.example .env.local",
		"format": "biome format --write . && sort-package-json",
		"format:check": "biome format . && sort-package-json -c",
		"lint": "biome lint .",
		"lint:fix": "biome lint --write --unsafe .",
		"start": "next start",
		"test": "vitest run",
		"test:console": "playwright test console-errors",
		"test:coverage": "vitest run --coverage",
		"test:e2e": "playwright test",
		"test:e2e:debug": "playwright test e2e --debug",
		"test:e2e:install": "playwright install",
		"test:e2e:report": "playwright show-report",
		"test:e2e:sharding": "playwright test e2e -x --reporter=list --output=playwright-report --shard=$PLAYWRIGHT_SHARD",
		"test:e2e:ui": "playwright test e2e --ui",
		"test:links": "linkinator http://localhost:3000 --skip 'github.com'",
		"test:ui": "vitest --ui",
		"test:watch": "vitest"
	},
	"dependencies": {
		"@radix-ui/react-accordion": "^1.2.11",
		"@radix-ui/react-dialog": "^1.1.15",
		"@radix-ui/react-hover-card": "^1.1.14",
		"@radix-ui/react-menubar": "^1.1.15",
		"@radix-ui/react-select": "^2.2.6",
		"@radix-ui/react-separator": "^1.1.7",
		"@radix-ui/react-slot": "^1.2.3",
		"@radix-ui/react-tooltip": "^1.2.8",
		"@tailwindcss/typography": "^0.5.16",
		"@types/react-syntax-highlighter": "^15.5.13",
		"class-variance-authority": "^0.7.1",
		"clsx": "^2.1.1",
		"lucide-react": "^0.525.0",
		"next": "15.4.7",
		"react": "19.1.0",
		"react-dom": "19.1.0",
		"react-icons": "^5.5.0",
		"react-markdown": "^10.1.0",
		"react-syntax-highlighter": "^16.1.0",
		"tailwind-merge": "^3.3.1"
	},
	"devDependencies": {
		"@biomejs/biome": "2.1.2",
		"@playwright/test": "^1.55.1",
		"@tailwindcss/postcss": "^4",
		"@types/node": "^20",
		"@types/react": "^19",
		"@types/react-dom": "^19",
		"@vitest/ui": "^4.0.4",
		"happy-dom": "^20.0.8",
		"lighthouse": "^12.8.2",
		"linkinator": "^6.1.4",
		"sort-package-json": "^3.4.0",
		"tailwindcss": "^4",
		"tw-animate-css": "^1.3.5",
		"typescript": "^5",
		"vitest": "^4.0.4"
	}
}
